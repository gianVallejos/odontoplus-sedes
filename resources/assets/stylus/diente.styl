.diente
    position relative
    width 52px
    height 52px

.diente-section
    background #73a5b6
    border 1px solid #000
    width 22px
    height 22px
    position absolute
    top 50%
    left 50%
    border-radius 0 0 100% 0
    cursor pointer
    transition all .1s ease-out
    &.top
        transform rotate(225deg)
        transform-origin 0% 0%
    &.right
        transform rotate(315deg)
        transform-origin 0% 0%
    &.bottom
        transform rotate(45deg)
        transform-origin 0% 0%
    &.left
        transform rotate(135deg)
        transform-origin 0% 0%

.middle
    border 1px solid black
    position absolute
    height 26px
    width 26px
    border-radius 50%
    background #73a5b6
    top 50%
    left 50%
    transform translate(-50%, -50%)
    transition all .1s ease-out
    cursor pointer

.ionomero
    background #73a5b6
    border 1px solid black
    width 34px
    height 34px
    position absolute
    top 19px
    left 50%
    border-radius 0 5px 100% 5px
    cursor pointer
    transition all .1s ease-out
    transform rotate(45deg)
    transform-origin 0% 0%

.diente-section.active,
  .middle.active,
  .ionomero.active
    background #da2a26

.diente-section:hover,
  .middle:hover,
  .ionomero:hover
    background #da2a26

.left-wrap
    width 573px
    
.od-right-border
    border-right: 1px solid rgba(0, 0, 0, .1)

.od-modal
    padding-top: 10px
    padding-bottom: 1px
    display: inline-block
    cursor: pointer
    &:hover
        opacity: .9
        font-weight: 600