/*
  font-family: 'Rubik', sans-serif;
  font-family: 'Open Sans', sans-serif;
*/
$btnInfoBc = #305f94
$btnGuardarBc = #0aab8a
$btnNuevoBc = #464d5c
$btnModificarBc = #858ea7
$btnCancelarBc = #ab4240
$btnInfoC = #f3f3f3


body
	background: #d1d1d1
	color: #464D5C
	font-family: 'Open Sans', sans-serif
	font-size: 14px
	
h1, h2, h3, h4, h5
	font-family: 'Rubik', sans-serif
	
a
	color: #0aab8a
	transition: all .4s
	&:hover
		color: #0aab8a

ul
	list-style-type: none
	margin: 0
	padding: 0
	
p 
	margin: 0

footer
	position: fixed
	bottom: 0
	width: 100%
	height: 60px
	line-height: 60px
	background: #305F94
	font-size: 14px
	font-family: 'Rubik', sans-serif
	color: #d1d1d1

.card
	border: none
	border-top: 4px solid $btnInfoBc
	border-radius: 0px
	width: 100%	
	.card-heading
		font-family: 'Rubik', sans-serif
		padding: 18px 26px 14px 26px
		font-size: 1.15em
		color: #858ea7
		border-bottom: 1px solid #d1d1d1
	.card-footer
		background: #fff
		text-align: right
	
.icon-input
	position: absolute
	top: 10px
	left: 15px
	i 
		color: #7f7f7f

.odInput
	width: 100%
	height: 40px
	padding: 12px 20px
	padding-left: 34px
	border: 1px solid #d1d1d1
	color: #7f7f7f
	font-size: .9em
	&:focus
		outline: none

.odBtn
	display: inline-block
	color: $btnInfoC!important
	border: none
	vertical-align: middle
	padding: 0.6rem 1.4rem
	cursor: pointer
	font-size: 1em
	line-height: 1.5
	border-radius: 0px
	font-family: 'Rubik', sans-serif
	transition: all .5s ease-out	
	&:focus
		outline: 0
	&.info
		background: $btnInfoBc
		color: $btnInfoC!important
		&:hover
			color: $btnInfoBc!important
			border-bottom: 4px solid $btnInfoBc
			background: $btnInfoC
			text-decoration: none			
		&:focus
			color: $btnInfoBc!important
			outline: 0
			background: $btnInfoC
			border-bottom: 4px solid $btnInfoBc
	&.guardar
		background: $btnGuardarBc
		color: $btnInfoC!important
		&:hover
			color: $btnGuardarBc!important
			border-bottom: 4px solid $btnGuardarBc
			background: $btnInfoC
			text-decoration: none
		&:focus
			color: $btnGuardarBc!important
			outline: 0
			background: $btnInfoC
			border-bottom: 4px solid $btnGuardarBc
	&.nuevo
		background: $btnNuevoBc
		color: $btnInfoC!important
		&:hover
			color: $btnNuevoBc!important
			border-bottom: 4px solid $btnNuevoBc
			background: $btnInfoC
			text-decoration: none
		&:focus
			color: $btnNuevoBc!important
			outline: 0
			background: $btnInfoC
			border-bottom: 4px solid $btnNuevoBc
	&.modificar
		background: $btnModificarBc
		color: $btnInfoC!important
		&:hover
			color: $btnModificarBc!important
			border-bottom: 4px solid $btnModificarBc
			background: $btnInfoC
			text-decoration: none
		&:focus
			color: $btnModificarBc!important
			outline: 0
			background: $btnInfoC
			border-bottom: 4px solid $btnModificarBc
	&.cancelar
		background: $btnCancelarBc
		color: $btnInfoC!important
		&:hover
			color: $btnCancelarBc!important
			border-bottom: 4px solid $btnCancelarBc
			background: $btnInfoC
			text-decoration: none
		&:focus
			color: $btnCancelarBc!important
			outline: 0
			background: $btnInfoC
			border-bottom: 4px solid $btnCancelarBc

.rubikFont
	font-family: 'Rubik', sans-serif

.contenido
	padding-top: 30px
	padding-bottom: 35px